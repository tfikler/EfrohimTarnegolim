@{
    Layout = "_Layout";
}
@model EfrohimTarnegolimWeb.Models.UserModel
<head>
    <link rel="stylesheet" href="~/css/SignIn.css" asp-append-version="true" />
</head>
<div class="container mt-5">
    <h2>Sign In</h2>
    <form method="post">
        <div class="mb-3">
            <label asp-for="Email" for="email" class="form-label">Email:</label>
            <input asp-for="Email" type="email" class="form-control" id="email" name="email" required>
        </div>
        <div class="mb-3">
            <label asp-for="Password" for="password" class="form-label">Password:</label>
            <input asp-for="Password" type="password" class="form-control" id="password" name="password" required>
        </div>
        <div class="btn-container">
            <button type="submit">Sign In</button>
        </div>
        <a href="@Url.Action("ForgotPassword", "Account")" class="btn btn-primary">Forgot Password</a>
    </form>
</div>

